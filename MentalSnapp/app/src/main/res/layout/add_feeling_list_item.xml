<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/feeling_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/feeling_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/basic_view_margin"
        android:paddingBottom="@dimen/basic_view_margin"
        android:layout_toRightOf="@+id/check_mark"
        android:paddingLeft="@dimen/view_large_margin"
        android:paddingRight="@dimen/basic_view_margin"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/color_gray"/>

        <View
            android:id="@+id/feeling_color"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_large_margin"/>

        <ImageView
            android:id="@+id/check_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_mark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/basic_view_margin"
            android:visibility="invisible"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"/>
</LinearLayout>