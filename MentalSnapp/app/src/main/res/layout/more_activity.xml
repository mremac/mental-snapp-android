            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/report_icon" />

        <TextView
            android:id="@+id/report_an_issue_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/report_an_issue_icon"
            android:layout_toRightOf="@+id/report_an_issue_icon"
            android:drawableRight="@drawable/forward_arrow"
            android:gravity="center_vertical"
            android:text="@string/report_an_issue"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/font_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/report_an_issue_icon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/report_an_issue_icon"
            android:layout_toRightOf="@+id/report_an_issue_icon"
            android:background="@color/dividor_color_2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tnc_layout"
