<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selected_sub_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/basic_view_margin"
        android:background="@drawable/blue_circle_bg"
        android:padding="@dimen/indicator_height" />

    <TextView
        android:id="@+id/selected_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/orange"
        android:textSize="@dimen/font_semi_large"
        android:gravity="center"
        android:layout_marginLeft="@dimen/view_large_margin"
        android:layout_marginRight="@dimen/view_large_margin"
        android:layout_below="@+id/selected_sub_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/basic_view_margin" />

    <TextView
        android:id="@+id/selected_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/view_large_margin"
        android:layout_marginRight="@dimen/view_large_margin"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/gray_4"
        android:textSize="@dimen/font_semi_large" />

</RelativeLayout>